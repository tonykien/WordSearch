<?xml version="1.0" encoding="utf-8"?>
<com.tonyk.ws.custom.CustomRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.tonyk.ws"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp" >

    <com.tonyk.ws.custom.RoundedImageView
        android:id="@+id/ivLevelIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/level1_icon"
        android:scaleType="centerInside"
        app:corner_radius="4dp"
        app:border_width="1dp"
        app:border_color="#607D8B" />

    <com.tonyk.ws.custom.RoundedImageView
        android:id="@+id/ivLocker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivLevelIcon"
        android:layout_alignLeft="@id/ivLevelIcon"
        android:layout_alignRight="@id/ivLevelIcon"
        android:layout_alignTop="@id/ivLevelIcon"
        android:scaleType="centerInside"
        android:src="@drawable/icon_locked_image"
        app:corner_radius="4dp" />

</com.tonyk.ws.custom.CustomRelativeLayout>